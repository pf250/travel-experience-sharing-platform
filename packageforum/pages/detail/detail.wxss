.container {
  padding: 20px;
}

.post-detail {
  margin-bottom: 20px;
}

.userinfo {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.username {
  font-size: 16px;
  font-weight: bold;
}

.post-meta {
  display: flex;
  align-items: center;
  color: #888;
  font-size: 14px;
}

.post-author {
  margin-right: 10px;
}

.post-title {
  font-size: 20px;
  font-weight: bold;
  margin-bottom: 10px;
}

.post-description {
  font-size: 16px;
  color: #333;
  margin-bottom: 20px;
}

.post-images {
  margin-bottom: 20px;
}

.post-image {
  width: 100%;
  height: 200px;
  margin-bottom: 10px;
}

.post-actions {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.like-btn,
.comment-btn {
  background-color: #007aff;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
}

.comments-section {
  margin-bottom: 20px;
}

.comment-list {
  margin-bottom: 20px;
}

.comment-item {
  margin-bottom: 10px;
}

.comment-author {
  font-weight: bold;
}

.comment-content {
  margin-left: 10px;
}

.comment-input {
  display: flex;
  align-items: center;
}

.comment-input input {
  flex: 1;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 5px;
  margin-right: 10px;
}

.comment-input button {
  background-color: #007aff;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
}