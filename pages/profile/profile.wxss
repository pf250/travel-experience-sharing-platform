/* 页面容器 */
.profile-container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f8f8f8;
}

/* 用户信息部分 */
.user-info-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
  padding: 15px;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.default-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.username {
  font-size: 18px;
  font-weight: bold;
}

.login-button {
  margin-top: 20px;
  background-color: #07c160;
  color: #fff;
  border-radius: 5px;
}

/* 功能列表部分 */
.function-list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.function-item {
  display: flex;
  align-items: center;
  padding: 15px;
  border-bottom: 1px solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.icon {
  width: 24px;
  height: 24px;
  margin-right: 15px;
}

.function-name {
  font-size: 16px;
  flex: 1;
}

.arrow-right {
  width: 20px;
  height: 20px;
}