/* forum.wxss */
.container {
  padding: 1rpx;
  background-color: #f5f5f5;
}

/* 头像样式 */
.avatar {
  width: 50px; /* 固定宽度 */
  height: 50px; /* 固定高度 */
  border-radius: 50%; /* 圆形头像 */
  margin-right: 10px; /* 右侧间距 */
}

/* 昵称样式 */
.username {
  font-size: 16px; /* 字体大小 */
  font-weight: bold; /* 加粗 */
  color: #333; /* 字体颜色 */
  margin-right: auto; /* 自动占据剩余空间，使昵称靠左 */
}

/* 用户信息容器样式 */
.post-meta {
  width: 320rpx;
  display: flex; /* 使用 Flexbox 布局 */
  flex-direction: column; /* 子元素垂直排列 */
  align-items: flex-end; /* 靠右对齐 */
  margin-left: 10rpx; /* 左侧间距 */
}

/* 作者 UID 样式 */
.post-author {
  font-size: 12px; /* 字体大小 */
  color: #666; /* 字体颜色 */
}

/* 时间样式 */
.post-time {
  font-size: 12px; /* 字体大小 */
  color: #999; /* 字体颜色 */
}

.userinfo {
  display: flex; /* 使用 Flexbox 布局 */
  align-items: flex-start; /* 顶部对齐 */
  padding: 10px; /* 内边距 */
  background-color: #fff; /* 背景颜色 */
  border-bottom: 1px solid #eee; /* 底部分割线 */
}

.user-details {
  display: flex;
  flex-direction: column;
  margin-right: auto;
}

/* 用户ID样式 */
.user-id {
  font-size: 12px; /* 字体大小 */
  color: #666; /* 字体颜色 */
  margin-top: 2px;
}

.post-card {
  width: 690rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 20rpx;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}


.post-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.post-description {
  display: -webkit-box; /* 使用弹性盒子布局 */
  -webkit-box-orient: vertical; /* 设置垂直方向排列 */
  -webkit-line-clamp: 2; /* 限制显示两行 */
  overflow: hidden; /* 隐藏超出部分 */
  text-overflow: ellipsis; /* 添加省略号 */
  word-break: break-all; /* 确保长单词自动换行 */
  line-height: 43rpx; /* 设置行高，避免文字过于紧凑 */
  max-height: 80rpx; /* 根据行高设置最大高度（2 行 × 1.5 行高） */
  padding: 5px;
  font-size: 28rpx;
  color: #333;
}

.post-images {
  display: flex;
  flex-wrap: wrap;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.post-meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.post-author {
  margin-right: 20rpx;
}

.post-actions {
  display: flex;
  align-items: center;
}

.like-btn,
.comment-btn {
  display: flex;
  justify-content: center;
  align-items: center;
  background: none;
  border: none;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.comments-section {
  margin-top: 20rpx;
}

.comment-item {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.comment-author {
  font-weight: bold;
  margin-right: 10rpx;
}

.comment-input {
  display: flex;
  align-items: center;
  margin-top: 20rpx;
}

.comment-input input {
  flex: 1;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  margin-right: 10rpx;
}

.comment-input button {
  background-color: #007bff;
  color: #fff;
  border: none;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}