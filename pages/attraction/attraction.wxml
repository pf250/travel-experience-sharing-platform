<!--pages/attraction/attraction.wxml-->
<view class="attraction-container">
  <!-- 顶部导航栏 -->
  <view class="header">
    <text class="title">景区列表</text>
  </view>

  <!-- 加载状态 -->
  <view wx:if="{{isLoading && scenicList.length === 0}}" class="loading-container">
    <text>加载中...</text>
  </view>

  <!-- 无景区提示 -->
  <view wx:elif="{{!isLoading && scenicList.length === 0}}" class="empty-container">
    <text>暂无景区信息</text>
  </view>

  <!-- 景区列表 -->
  <view wx:else class="scenic-list">
    <view wx:for="{{scenicList}}" wx:key="{{item._id}}" class="scenic-item" bindtap="navigateToDetail" data-id="{{item._id}}">
      <!-- 景区图片 -->
      <view class="scenic-image">
        <image src="{{item.images && item.images.length > 0 ? item.images[0] : 'https://trae-api-cn.mchost.guru/api/ide/v1/text_to_image?prompt=scenic%20spot%20placeholder%20image&image_size=square'}}" mode="aspectFill"></image>
      </view>
      
      <!-- 景区信息 -->
      <view class="scenic-info">
        <text class="scenic-name">{{item.name}}</text>
        <text class="scenic-address">{{item.address}}</text>
        <view class="scenic-footer">
          <text class="scenic-status">{{item.status}}</text>
          <text class="scenic-contact">{{item.contactPhone}}</text>
        </view>
      </view>
    </view>
  </view>

  <!-- 加载更多提示 -->
  <view wx:if="{{isLoading && scenicList.length > 0}}" class="loading-more">
    <text>加载中...</text>
  </view>

  <!-- 没有更多数据提示 -->
  <view wx:if="{{!hasMore && scenicList.length > 0}}" class="no-more">
    <text>没有更多景区了</text>
  </view>
</view>