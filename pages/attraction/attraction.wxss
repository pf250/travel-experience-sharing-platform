.attraction-container {
  padding-bottom: 20rpx;
}

/* 顶部导航栏 */
.header {
  padding: 20rpx;
  background-color: #f5f5f5;
  border-bottom: 1rpx solid #e0e0e0;
}

.header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
  display: block;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 无景区提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  color: #999;
}

/* 景区列表 */
.scenic-list {
  padding: 10rpx;
}

/* 景区项 */
.scenic-item {
  display: flex;
  margin-bottom: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  overflow: hidden;
  transition: transform 0.2s ease;
}

.scenic-item:active {
  transform: scale(0.98);
}

/* 景区图片 */
.scenic-image {
  width: 200rpx;
  height: 150rpx;
  flex-shrink: 0;
}

.scenic-image image {
  width: 100%;
  height: 100%;
}

/* 景区信息 */
.scenic-info {
  flex: 1;
  padding: 15rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.scenic-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.scenic-address {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.scenic-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.scenic-status {
  font-size: 20rpx;
  color: #4CAF50;
  background-color: #E8F5E9;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.scenic-contact {
  font-size: 20rpx;
  color: #999;
}

/* 加载更多提示 */
.loading-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 22rpx;
}

/* 没有更多数据提示 */
.no-more {
  text-align: center;
  padding: 20rpx;
  color: #999;
  font-size: 22rpx;
}