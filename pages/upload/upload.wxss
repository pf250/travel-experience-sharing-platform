/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 20px;
  background-color: #f9f9f9; /* 浅灰色背景 */
  min-height: 100vh; /* 让背景充满整个屏幕 */
}

/* 卡片通用样式 */
.upload-card {
  width: 80%;
  height: 150px;
  margin: 20px 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 15px;
  box-shadow: 0 6px 15px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease, box-shadow 0.3s ease; /* 添加点击动画效果 */
}

/* 发闲置按钮样式 */
.idle-card {
  background: linear-gradient(145deg, #90ee90, #76c776); /* 渐变浅绿色 */
}

/* 发帖子按钮样式 */
.post-card {
  background: linear-gradient(145deg, #ffb347, #ff9b29); /* 渐变浅橙色 */
}

/* 图标样式 */
.icon {
  width: 50px;
  height: 50px;
  margin-bottom: 10px;
}

/* 按钮文字样式 */
.upload-text {
  color: white;
  font-size: 20px;
  font-weight: bold;
  text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.2); /* 文字阴影 */
}

/* 按钮点击时的效果 */
.upload-card:active {
  transform: scale(0.97); /* 点击时缩小 */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 点击时阴影变小 */
}