<view class="container">
 <!-- è½®æ’­å›¾ -->
<swiper 
  class="banner" 
  indicator-dots="true" 
  autoplay="true"  
  interval="3000" 
  duration="1000"
  circular="true"
  bindchange="onSwiperChange">
  
  <swiper-item 
    wx:for="{{banners}}" 
    wx:key="id" 
    class="swiper-item {{currentIndex === index ? 'current' : ''}}">
    
    <image 
      src="{{item.imageUrl}}" 
      mode="aspectFill" 
      class="banner-image"
      bindtap="onBannerTap" 
      data-id="{{item.id}}"/>
  </swiper-item>
</swiper>

  <!-- å…¬å‘Šæ  -->
  <view class="notice-container">
    <view class="notice-bar">
      <view class="logo">ðŸ”Š</view>
      <swiper class="notice-swiper" 
        autoplay="true" 
        circular="true" 
        interval="4000"
        duration="1000">
        <swiper-item wx:for="{{notices}}" wx:key="id">
          <view class="notice-text">{{item.content}}</view>
        </swiper-item>
      </swiper>
    
    </view>
  </view>

  <!-- åŠŸèƒ½å…¥å£ -->
  <view class="function-container">
    <view class="function-item" 
      wx:for="{{functions}}" 
      wx:key="id"
      bindtap="onFunctionTap"
      data-url="{{item.url}}">
      <image src="{{item.icon}}"/>
      <text>{{item.name}}</text>
    </view>
  </view>
</view> 