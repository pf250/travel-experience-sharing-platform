/* 全局容器样式 */
.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
}

/* 块级区域 - 通用样式 */
.block {
  background: white;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 第一个 block 样式 */
.block-top {
  min-height: 800rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 30rpx;
}

/* 标题输入框样式 */
.title-group {
  margin-bottom: 20rpx;
}
.title-input {
  width: 100%;
  height: 80rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #333;
  border: none;
  outline: none;
  padding: 0 10rpx;
  background: #fafafa;
  border-radius: 8rpx;
  transition: background 0.2s ease;
}
.title-input:focus {
  background: #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 描述文本域样式 */
.description-group {
  flex: 1;
  margin-bottom: 20rpx;
}
.desc-textarea {
  width: 100%;
  min-height: 150rpx;
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  border: none;
  outline: none;
  padding: 10rpx;
  background: #fafafa;
  border-radius: 8rpx;
  transition: background 0.2s ease;
}
.desc-textarea:focus {
  background: #ffffff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 图片上传区域 */
.uploader {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx 0;
}
.upload-btn,
.img-item {
  width: 200rpx;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  background: #fafafa;
  transition: transform 0.2s ease;
}
.upload-btn:hover,
.img-item:hover {
  transform: scale(1.05);
}
.upload-btn .plus {
  font-size: 60rpx;
  font-weight: bold;
  color: #999;
}
.upload-btn .tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 8rpx;
}
.delete-btn {
  position: absolute;
  right: -10rpx;
  top: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: red;
  color: white;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  font-size: 28rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
}

/* 发布按钮样式 */
.publish-btn {
  background: #08bf62;
  color: white;
  margin: 40rpx 30rpx;
  border-radius: 50rpx;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 60rpx;
  text-align: center;
  transition: background 0.3s ease, transform 0.2s ease;
}
.publish-btn:hover {
  background: #07a855;
  transform: scale(1.05);
}
.publish-btn:active {
  background: #068e4b;
  transform: scale(0.95);
}