/* 页面容器 */
.profile-edit-container {
  display: flex;
  flex-direction: column;
  padding: 15px;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20px;
  padding: 15px;
  background-color: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  width: 100%;
  box-sizing: border-box;
}

.avatar-wrapper {
  width: 100px;
  height: 150px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px dashed #07c160;
  background-color: #f8f8f8;
  transition: all 0.3s ease;
}

.avatar-wrapper:hover {
  border-color: #09d570;
  box-shadow: 0 0 10px rgba(7, 193, 96, 0.2);
  transform: scale(1.05);
}

.avatar {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}

.avatar-tip {
  font-size: 12px;
  color: #666;
  margin-top: 10px;
}

/* 信息列表 */
.info-list {
  background-color: #fff;
  border-radius: 12px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
  margin-bottom: 15px;
  width: 100%;
  box-sizing: border-box;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #f0f0f0;
  transition: all 0.2s ease;
}

.info-item:hover {
  background-color: #f9f9f9;
  padding-left: 8px;
  padding-right: 8px;
  border-radius: 6px;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 15px;
  color: #333;
  min-width: 70px; /* 固定宽度，确保对齐 */
  font-weight: 500;
}

.info-input {
  flex: 1;
  height: 35px;
  padding: 0 8px;
  border: none;
  font-size: 14px;
  text-align: right;
  color: #333;
  background-color: transparent;
}

.info-input:focus {
  outline: none;
  color: #07c160;
}

.picker-result {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #333;
  padding: 8px 0;
}

.info-value {
  flex: 1;
  text-align: right;
  font-size: 13px;
  color: #666;
  padding: 8px 0;
  word-break: break-all;
}

/* 保存按钮样式 */
.save-button {
  background-color: #07c160;
  color: white;
  font-size: 15px;
  font-weight: 500;
  padding: 12px;
  border-radius: 8px;
  margin-top: 15px;
  transition: all 0.3s ease;
  box-shadow: 0 2px 6px rgba(7, 193, 96, 0.3);
}

.save-button:hover {
  background-color: #09d570;
  box-shadow: 0 3px 9px rgba(7, 193, 96, 0.4);
  transform: translateY(-1px);
}

.save-button:active {
  transform: translateY(0);
}

/* 退出登录按钮样式 */
.logout-button {
  background-color: #ff4d4f;
  color: white;
  font-size: 15px;
  font-weight: 500;
  padding: 12px;
  border-radius: 8px;
  margin-top: 10px;
  transition: all 0.3s ease;
  box-shadow: 0 2px 6px rgba(255, 77, 79, 0.3);
}

.logout-button:hover {
  background-color: #ff7875;
  box-shadow: 0 3px 9px rgba(255, 77, 79, 0.4);
  transform: translateY(-1px);
}

.logout-button:active {
  transform: translateY(0);
}

/* 响应式调整 */
@media (max-width: 375px) {
  .profile-edit-container {
    padding: 12px;
  }
  
  .info-list {
    padding: 12px;
  }
  
  .info-item {
    padding: 10px 0;
  }
  
  .save-button,
  .logout-button {
    padding: 10px;
  }
}