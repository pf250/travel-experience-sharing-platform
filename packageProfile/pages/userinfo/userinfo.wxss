/* 页面容器 */
.profile-edit-container {
  display: flex;
  flex-direction: column;
  padding: 20px;
  background-color: #f8f8f8;
}

/* 头像部分 */
.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30px;
}

.avatar-wrapper {
  width: 120px;
  height: 120px;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 2px dashed #ccc;
  background-color: #fff;
}

.avatar {
  width: 100%;
  height: 100%;
}

.avatar-tip {
  font-size: 12px;
  color: #999;
  margin-top: 10px;
}

/* 信息列表 */
.info-list {
  background-color: #fff;
  border-radius: 10px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10px 0;
  border-bottom: 1px solid #eee;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 16px;
  color: #333;
  min-width: 80px; /* 固定宽度，确保对齐 */
}

.info-input {
  flex: 1;
  height: 30px;
  padding: 5px;
  border: none;
  font-size: 14px;
  text-align: right;
  color: #333;
}

.picker-result {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #333;
}

.info-value {
  flex: 1;
  text-align: right;
  font-size: 14px;
  color: #666;
}

/* 保存按钮样式 */
.save-button {
  background-color: #07c160;
  color: white;
  font-size: 16px;
  padding: 10px;
  border-radius: 5px;
  margin-top: 20px;
}

/* 退出登录按钮样式 */
.logout-button {
  background-color: #ff4d4f;
  color: white;
  font-size: 16px;
  padding: 10px;
  border-radius: 5px;
  margin-top: 10px;
}