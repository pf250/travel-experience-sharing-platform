/* packageProfile/pages/privilege/merchant/ticket-manage/ticket-manage.wxss */

/* 容器样式 */
.ticket-manage-container {
  padding: 20rpx;
  min-height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #e0e0e0;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #007aff;
  color: white;
  border-radius: 8rpx;
  padding: 10rpx 20rpx;
  font-size: 24rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

/* 无数据提示 */
.empty-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 100rpx 0;
  color: #999;
}

.empty-container text {
  margin-bottom: 30rpx;
  font-size: 28rpx;
}

/* 门票列表 */
.ticket-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

/* 门票项 */
.ticket-item {
  background-color: white;
  border-radius: 12rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.ticket-info {
  margin-bottom: 20rpx;
}

.ticket-name {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
}

.ticket-price {
  display: block;
  font-size: 28rpx;
  color: #ff4757;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.ticket-stock {
  display: block;
  font-size: 24rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.ticket-description {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.ticket-status {
  margin-top: 12rpx;
}

.status-active {
  color: #2ed573;
  font-size: 24rpx;
  font-weight: 500;
}

.status-inactive {
  color: #ff6b81;
  font-size: 24rpx;
  font-weight: 500;
}

/* 操作按钮区域 */
.ticket-actions {
  display: flex;
  gap: 12rpx;
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-btn {
  flex: 1;
  padding: 12rpx 0;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.edit-btn {
  background-color: #1e90ff;
  color: white;
}

.up-btn {
  background-color: #27ae60;
  color: white;
}

.down-btn {
  background-color: #f39c12;
  color: white;
}

.delete-btn {
  background-color: #e74c3c;
  color: white;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background-color: white;
  border-radius: 16rpx;
  width: 80%;
  max-width: 500rpx;
  padding: 32rpx;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e0e0e0;
}

.modal-header text {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0;
  min-width: 40rpx;
}

/* 表单样式 */
.form-input {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
}

.form-textarea {
  width: 100%;
  padding: 20rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  min-height: 150rpx;
  resize: none;
}

.form-buttons {
  display: flex;
  gap: 20rpx;
}

.primary-btn {
  flex: 1;
  background-color: #007aff;
  color: white;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
}

.cancel-btn {
  flex: 1;
  background-color: #f5f5f5;
  color: #333;
  padding: 20rpx 0;
  border-radius: 8rpx;
  font-size: 26rpx;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 375px) {
  .ticket-actions {
    flex-direction: column;
  }
  
  .action-btn {
    width: 100%;
  }
  
  .modal-content {
    width: 90%;
  }
}