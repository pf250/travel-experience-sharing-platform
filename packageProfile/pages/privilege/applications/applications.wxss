/* applications.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

/* 固定头部样式 */
.fixed-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background-color: #fff;
  border-bottom: 1rpx solid #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.header-content {
  padding: 40rpx 32rpx 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #666;
}

/* 列表容器 */
.list-container {
  height: 100vh;
  box-sizing: border-box;
}

/* 空状态 */
.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 40rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 16rpx;
}

.empty-subtext {
  font-size: 28rpx;
  color: #ccc;
}

/* 申请卡片 */
.application-item {
  margin-bottom: 24rpx;
}

.card {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

/* 状态栏 */
.status-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.status-bar.status-pending {
  background-color: #FFF3E0;
}

.status-bar.status-approved {
  background-color: #E8F5E9;
}

.status-bar.status-rejected {
  background-color: #FFEBEE;
}

.status-bar.status-unknown {
  background-color: #F5F5F5;
}

.status {
  font-size: 28rpx;
  font-weight: bold;
}

.status-pending .status {
  color: #FF9800;
}

.status-approved .status {
  color: #4CAF50;
}

.status-rejected .status {
  color: #F44336;
}

.status-unknown .status {
  color: #9E9E9E;
}

.time {
  font-size: 24rpx;
  color: #999;
}

/* 内容区域 */
.content {
  padding: 32rpx;
}

/* 照片区域 */
.photo-section {
  margin-bottom: 32rpx;
}

.photo-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.photo {
  width: 100%;
  height: 150rpx;
  border-radius: 8rpx;
}

/* 信息行 */
.info-row {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  word-break: break-all;
}

/* 状态显示 */
.status-display {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-display.status-pending {
  background-color: #FFF3E0;
  color: #FF9800;
}

.status-display.status-approved {
  background-color: #E8F5E9;
  color: #4CAF50;
}

.status-display.status-rejected {
  background-color: #FFEBEE;
  color: #F44336;
}

.status-display.status-unknown {
  background-color: #F5F5F5;
  color: #9E9E9E;
}

/* 加载状态 */
.loading, .loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 60rpx 0;
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

.no-more {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999;
}