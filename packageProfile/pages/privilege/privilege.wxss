.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
  padding: 20px;
  position: relative;
}

.decoration-bar {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
}

.header {
  width: 100%;
  text-align: center;
  margin: 30px 0 40px;
  padding-top: 10px;
}

.title-wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12px;
  margin-bottom: 10px;
}

.icon-crown {
  width: 28px;
  height: 28px;
  background: linear-gradient(45deg, #FFD700, #FFA500);
  clip-path: polygon(50% 0%, 61% 35%, 98% 35%, 68% 57%, 79% 91%, 50% 70%, 21% 91%, 32% 57%, 2% 35%, 39% 35%);
}

.title {
  font-size: 32px;
  font-weight: bold;
  background: linear-gradient(45deg, #2c3e50, #3498db);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  letter-spacing: 1px;
}

.badge {
  background: linear-gradient(45deg, #ff6b6b, #ee5a24);
  color: white;
  padding: 4px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: bold;
}

.subtitle {
  font-size: 14px;
  color: #7f8c8d;
  margin-top: 8px;
}

.content {
  width: 100%;
  padding: 25px;
  background: white;
  border-radius: 20px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
  margin-bottom: 30px;
}

.identity-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 30px;
  color: white;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.card-title {
  font-size: 16px;
  opacity: 0.9;
}

.role-badge {
  background: rgba(255, 255, 255, 0.2);
  padding: 6px 15px;
  border-radius: 20px;
  font-size: 14px;
  font-weight: bold;
  backdrop-filter: blur(10px);
}

.card-body {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.info-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.icon-user, .icon-shield {
  width: 20px;
  height: 20px;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 12px;
}

.info-text {
  font-size: 15px;
}

.process-section {
  background: #f8f9fa;
  border-radius: 16px;
  padding: 20px;
  margin-bottom: 25px;
}

.section-title {
  display: block;
  font-size: 18px;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 20px;
  text-align: center;
}

.process-steps {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 40px;
  height: 40px;
  background: linear-gradient(45deg, #3498db, #2980b9);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: bold;
  margin-bottom: 8px;
  font-size: 18px;
}

.step-text {
  font-size: 12px;
  color: #666;
  text-align: center;
}

.step-arrow {
  color: #3498db;
  font-size: 20px;
  margin: 0 5px;
  opacity: 0.7;
}

.tip-text {
  display: block;
  text-align: center;
  font-size: 13px;
  color: #e67e22;
  background: rgba(230, 126, 34, 0.1);
  padding: 10px;
  border-radius: 10px;
  margin-top: 15px;
}

.apply-button {
  background: linear-gradient(135deg, #1aad19 0%, #17a916 100%);
  color: white;
  border: none;
  padding: 0;
  border-radius: 15px;
  font-size: 16px;
  width: 100%;
  overflow: hidden;
  box-shadow: 0 4px 15px rgba(26, 173, 25, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 15px; /* Add margin for spacing */
}

.button-hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(26, 173, 25, 0.4);
}

.button-content {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 5px;
  padding: 18px;
}

.icon-rocket {
  width: 20px;
  height: 20px;
  background-color: white;
  mask: url('data:image/svg+xml,<svg viewBox="0 0 24 24"><path d="M13 3v10l8-7v14l-8-7v10L11 21l-1.5-1L11 19l-8 2v-8l8 2v-4l-8 2V9l8 2V3z"/></svg>');
  mask-size: cover;
}

.icon-list {
  width: 20px;
  height: 20px;
  background-color: white;
  mask: url('data:image/svg+xml,<svg viewBox="0 0 24 24"><path d="M3 13h18v-2H3v2zm0 4h18v-2H3v2zm0-8h18V7H3v2zm0 12h18v-2H3v2z"/></svg>');
  mask-size: cover;
}

.icon-arrow {
  width: 16px;
  height: 16px;
  border: 2px solid #333;
  border-left: none;
  border-bottom: none;
  transform: rotate(45deg);
}

.button-subtext {
  display: block;
  font-size: 12px;
  opacity: 0.9;
  text-align: center;
  padding-bottom: 15px;
  background: rgba(255, 255, 255, 0.1);
}

.records-link {
  display: block;
  color: #666; /* Shallow gray color */
  font-size: 16px;
  text-align: center;
  margin-top: 10px;
  cursor: pointer;
  transition: color 0.3s ease;
}

.records-link:hover {
  color: #333; /* Slightly darker gray on hover */
}

.verified-section {
  text-align: center;
  padding: 30px 20px;
}

.verified-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(45deg, #2ecc71, #27ae60);
  color: white;
  padding: 10px 25px;
  border-radius: 25px;
  margin-bottom: 15px;
  font-weight: bold;
}

.icon-check {
  width: 18px;
  height: 18px;
  background-color: white;
  border-radius: 50%;
  position: relative;
}

.icon-check::after {
  content: '';
  position: absolute;
  top: 4px;
  left: 6px;
  width: 5px;
  height: 8px;
  border: solid #2ecc71;
  border-width: 0 2px 2px 0;
  transform: rotate(45deg);
}

.verified-text {
  color: #666;
  font-size: 14px;
  display: block;
}

.footer {
  text-align: center;
  padding: 20px;
  color: #95a5a6;
  font-size: 12px;
}

.footer-text {
  display: block;
}