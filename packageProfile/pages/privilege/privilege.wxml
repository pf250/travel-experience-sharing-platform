<view class="container">
  <!-- 添加顶部渐变装饰条 -->
  <view class="decoration-bar"></view>
  
  <view class="header">
    <!-- 添加图标增强视觉效果 -->
    <view class="title-wrapper">
      <view class="icon-crown"></view>
      <text class="title">特权中心</text>
      <view class="badge">VIP</view>
    </view>
    <text class="subtitle">尊享专属权益与服务</text>
  </view>

  <view class="content">
    <!-- 用户身份卡片 -->
    <view class="identity-card">
      <view class="card-header">
        <text class="card-title">当前身份</text>
        <view class="role-badge">
          {{ role === 'user' ? '普通用户' : role }}
        </view>
      </view>
      <view class="card-body">
        <view class="info-item">
          <view class="icon-user"></view>
          <text class="info-text">欢迎来到特权中心</text>
        </view>
        <view class="info-item">
          <view class="icon-shield"></view>
          <text class="info-text">尊享{{ role === 'user' ? '普通用户' : '商家' }}专属权益</text>
        </view>
      </view>
    </view>

    <!-- 申请流程指引 -->
    <view class="process-section" wx:if="{{ role === 'user' }}">
      <text class="section-title">升级商家特权</text>
      <view class="process-steps">
        <view class="step">
          <view class="step-number">1</view>
          <text class="step-text">点击下方按钮</text>
        </view>
        <view class="step-arrow">→</view>
        <view class="step">
          <view class="step-number">2</view>
          <text class="step-text">上传申请材料</text>
        </view>
        <view class="step-arrow">→</view>
        <view class="step">
          <view class="step-number">3</view>
          <text class="step-text">等待审核通过</text>
        </view>
      </view>
      
      <text class="tip-text">📋 请准备好营业执照及相关资质文件</text>
    </view>

    <!-- 美化后的按钮 -->
    <view class="buttons-container" wx:if="{{ role === 'user' }}">
      <button 
        bindtap="applyForMerchant" 
        class="apply-button"
        hover-class="button-hover"
      >
        <view class="button-content">
          <view class="icon-rocket"></view>
          <text>申请成为商家</text>
          <view class="icon-arrow"></view>
        </view>
        <text class="button-subtext">开启更多特权与收益</text>
      </button>

      <text 
        bindtap="viewApplicationRecords" class="records-link">
        查看申请记录
      </text>
    </view>

    <!-- 已认证商家显示 -->
    <view class="verified-section" wx:else>
      <view class="verified-badge">
        <view class="icon-check"></view>
        <text>已认证商家</text>
      </view>
      <text class="verified-text">您已享受所有商家特权，感谢您的信任！</text>
    </view>
  </view>

  <!-- 底部装饰 -->
  <view class="footer">
    <text class="footer-text">如有疑问请联系客服：400-666-666</text>
  </view>
</view>